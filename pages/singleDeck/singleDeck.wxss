.cardList {
  display: flex;
  width: 100%;
}

.classCardList, .neutralCardList {
  width: 50%;
}

.card {
  position: relative;
  display: flex;
  margin: 0 auto;
  border: 1px solid #000;
  width: 320rpx;
  height: 40rpx;
  margin-bottom: 2rpx;
}

.card > text {
  line-height: 40rpx;
  font-size: 25rpx;
  text-shadow: -1px -1px 1px #000, 1px -1px 1px #000, -1px 1px 1px #000, 1px 1px 1px #000;
}

.cardCost {
  flex: 0 0 40rpx;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  border-right: 1px solid #000;
  color: #fff;
}

.FREE, .COMMON {
  background-color: #858585;
}

.RARE {
  background-color: #315376;
}

.EPIC {
  background-color: #644c82;
}

.LEGENDARY {
  background-color: #855c25;
}

.cardNameBg {
  position: relative;
  flex: 1 0 auto;
}

.cardName {
  position: absolute;
  padding-left: 10rpx;
  width: 100%;
  height: 100%;
  line-height: 40rpx;
  text-align: left;
  font-size: 22rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  color: #fff;
  text-shadow: -1px -1px 1px #000, 1px -1px 1px #000, -1px 1px 1px #000, 1px 1px 1px #000;
  background: linear-gradient(65deg, #313109, #313131 calc(100% - 120rpx), rgba(49, 49, 49, 0) calc(100% - 50rpx), rgba(49, 49, 49, 0));
  z-index: 2;
}

.cardImg{
  position: absolute;
  right: 0;
  width: 170rpx;
  height: 40rpx;
  z-index: 1;
}

.cardCopy {
  flex: 0 0 40rpx;
  width: 40rpx;
  text-align: center;
  border-left: 1px solid #000;
  background-color: #313131;
  color: #f4d442;
}

.bottomView {
  position: fixed;
  display: flex;
  bottom: 0;
  width: 100%;
}

.bottomView button {
  width: 50%;
  border-radius: 0 !important;
}

.bottomView .iconfont {
  font-weight: bold;
}

