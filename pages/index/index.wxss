.container {
  background-color: #ddd;
}

.section {
  position: relative;
  margin-bottom: 50rpx;
}

.header {
  background-color: #fff;
}

.mainTitle {
  position: absolute;
  top: -30rpx;
  padding: 0 30rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 32rpx;
  letter-spacing: 5rpx;
  border-radius: 0 60rpx 60rpx 0;
  background: -webkit-linear-gradient(left, #ffdc40, #ffbc07);
  color: #fff;
  z-index: 100;
}

.bottomTitle {
  position: absolute;
  padding: 0 20rpx;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
  color: #fff;
  background: -webkit-linear-gradient(top, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.5));
}

/* swiper */

.recommend {
  width: 100%;
  height: 350rpx;
}

.recommend .slide-image {
  width: 100%;
}

/* 职业分类 */

.classes {
  padding-top: 30rpx;
  display: flex;
  flex-flow: row wrap;
}

.classBox {
  width: 20%;
  text-align: center;
  margin-bottom: 30rpx;
}

.classBox image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.classBox text {
  display: block;
  font-size: 20rpx;
}

/* 炉石新闻 */

.card_news {
  position: relative;
  width: 100%;
  height: 350rpx;
  margin-bottom: 20rpx;
}

.newsImg {
  width: 100%;
  height: 100%;
}

/* 卡组列表 */

.card_deck {
  position: relative;
  width: 100%;
  height: 350rpx;
  margin-bottom: 20rpx;
}

.card_deck .leftImg, .card_deck .rightImg {
  position: absolute;
  top: 0;
  width: 60%;
  height: 100%;
}

.card_deck .leftImg {
  left: 0;
}

.card_deck .rightImg {
  right: 0;
  -webkit-mask-image: -webkit-gradient(linear, left top, right top, color-stop(0, transparent), color-stop(15%, transparent), color-stop(35%, #000), color-stop(100%, #000));
}

.card_deck .name {
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 60rpx;
  letter-spacing: 10rpx;
  color: #fff;
  text-shadow: 1px 1px 5px #000;
}

.cost {
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
}

.cost image {
  position: absolute;
  top: 0;
  width: 50rpx;
  height: 50rpx;
}

.cost text {
  padding-left: 50rpx;
  color: #fff;
  text-shadow: 1px 1px 2px #000;
}
