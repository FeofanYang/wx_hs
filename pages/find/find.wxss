page {
  height: 100%;
  overflow: hidden;
  background-color: #f9f9f9;
}

.thead {
  width: 100%;
  height: 60px;
  display: flex;
  align-items: center;
  text-align: center;
  box-shadow: 0 0 0, 0 3px 6px rgba(0, 0, 0, 0.25);
}

.thead picker {
  width: 50%;
  line-height: 50px;
}

.thead .win_rate {
  width: 20%;
}

.thead .games {
  width: 30%;
}

.thead .iconfont.true {
  color: #90bb70;
}

/* 卡组列表 */

.card_deck {
  position: relative;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 100%;
  padding: 30rpx 0;
  border-bottom: 1px solid #000;
  overflow: hidden;
}

.card_deck .info {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  width: 50%;
}

.card_deck .win_rate {
  width: 20%;
  text-align: center;
}

.card_deck .games {
  width: 30%;
  text-align: center;
}

.card_deck .info image {
  margin: 0 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
}

.BGI, .BGI_mask {
  position: absolute;
  z-index: -1;
}

.BGI {
  width: 600rpx;
  top: -50rpx;
}

.BGI_mask {
  width: 100%;
  height: 100%;
  background-image: linear-gradient(90deg, #fbf7f6 0, hsla(0, 0%, 100%, 0.8) 100px, #f9f9f9 256px);
}

/* 分页器 */

.pagination {
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 80px;
}

.pagination view, .pagination button {
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 80rpx;
  opacity: 0.8;
  color: #fff;
  background-color: #1d3657;
  border: none;
}

.pagination button[disabled]:not([type]) {
  opacity: 0.5;
  color: #fff;
  background-color: #1d3657;
}

.pagination view {
  padding: 0 20px;
}

/* 空白提示 */

.empty {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}

.empty icon {
  display: block;
}

.empty button {
  width: 90%;
}
