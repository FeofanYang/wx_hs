page {
  height: 100%;
  overflow: hidden;
}

.picker {
  display: flex;
  height: 50px;
  line-height: 50px;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
}

.picker view {
  width: 33%;
  text-align: center;
  font-size: 26rpx;
}

/* 卡组列表 */

.card_deck {
  position: relative;
  display: flex;
  justify-content: space-between;
  width: 100%;
  height: 180rpx;
  border-bottom: 1px solid #000;
  overflow: hidden;
}

.BGI, .BGI_mask {
  position: absolute;
  z-index: -1;
}

.BGI {
  width: 520rpx;
  top: -50rpx;
}

.BGI_mask {
  width: 100%;
  height: 100%;
  background-image: linear-gradient(90deg, #fbf7f6 1%, hsla(0, 0%, 100%, 0.7) 100px, #f9f9f9 256px);
}

.card_deck .class, .card_deck .name, .card_deck .dust {
  align-self: center;
}

.card_deck .class {
  margin-left: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}

.card_deck .name {
  font-size: 34rpx;
}

.card_deck .dust {
  display: flex;
  margin-right: 30rpx;
}

.dust image {
  width: 50rpx;
  height: 50rpx;
}

.dust text {
  font-size: 34rpx;
  color: #000;
}

/* 空白提示 */

.empty {
  text-align: center;
}

.empty icon {
  display: block;
  margin: 60rpx 0 20rpx;
}

.empty button{
  margin-top: 60rpx;
  width: 90%;
}
